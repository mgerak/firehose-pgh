<div class="stolen-frosty span6 offset4 text-center">

	<h1 class="stolen-h1">
		Save Your Lesson
	</h1>

	<%= simple_form_for @pic do |f| %>
	</br>
	<%= f.input :lesson %>
	</br>	
	<%= f.input :image, label: "Upload your image." %>
	</br>	
	<%= f.input :emotion, label: "How did you feel?", placeholder: 'Happy, Jazzed, Super' %>
	</br>	
	<%= f.input :learned, label: "What did you learn?", placeholder: 'CSS, HTML, Rails, Github, Install' %>

	<%= submit_tag 'Save', :class =>'btn btn-success btn-large' %>

	<% end %>

</div>